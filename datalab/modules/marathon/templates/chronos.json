{
    "id": "{{chronos.id}}",
    "instances": 1,
    "cpus": {{ chronos.nb_cpus }},
    "mem": {{ chronos.mem }},
    "requirePorts": false,
    "cmd": "echo $PORT > /etc/chronos/conf/http_port && su - root -c \"/usr/bin/chronos\"",
    "constraints": [["hostname", "UNIQUE"], ["node_type", "CLUSTER", "{{chronos.node_type}}"]]
}

